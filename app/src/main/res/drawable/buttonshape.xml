<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape >
            <solid
                android:color="#222C39" />
            <stroke
                android:width="1dp"
                android:color="#222C39" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="20dp"
                android:right="20dp"
                android:top="15dp"
                android:bottom="15dp" />
        </shape>
    </item>
    <item >
        <shape >
            <gradient
                android:startColor="#243447"
                android:endColor="#243447"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#243447" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>